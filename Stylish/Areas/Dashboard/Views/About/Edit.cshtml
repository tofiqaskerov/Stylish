@model About



<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit"  method = "post"  class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Title</label>
                    <input asp-for="Title" class="form-control" style="color:#fff;" name="Title" value="@Model.Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subtitle" class="control-label">Subtitle</label>
                    <input asp-for="Subtitle" class="form-control"  style="color:#fff;" name="Subtitle" value="@Model.Subtitle" />
                    <span asp-validation-for="Subtitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BgColor" class="control-label">BgColor</label>
                    <input asp-for="BgColor" style="width:150px;height: 50px" class="form-control" type="color"  style="color:#fff;"name="BgColor"  value="@Model.BgColor" />

                    <span asp-validation-for="BgColor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mb-4">
        <a class = "btn btn-success" href="/dashboard/about">Return Index</a>
    </div>
</div>



